<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBody" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />



        <View
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/replyBtn"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />


    <ImageButton
        android:id="@+id/favBtn"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignTop="@id/replyBtn"
        android:layout_toRightOf="@id/rtBtn"
        android:layout_marginStart="50dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_vector_heart_stroke" />

    <ImageButton
        android:id="@+id/dmBtn"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignTop="@id/replyBtn"
        android:layout_toRightOf="@id/favBtn"
        android:layout_marginStart="50dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_vector_messages_stroke" />


    <ImageButton
        android:id="@+id/replyBtn"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvBody"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:onClick="onReplyAction"
        app:srcCompat="@drawable/replyicon" />


    <ImageButton
        android:id="@+id/rtBtn"
        android:layout_width="21dp"
        android:layout_height="19dp"
        android:background="@android:color/transparent"
        android:layout_alignTop="@id/replyBtn"
        android:layout_toRightOf="@id/replyBtn"
        android:layout_marginStart="50dp"
        app:srcCompat="@drawable/ic_vector_retweet_stroke" />

    <TextView
        android:id="@+id/tvHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvUserName"
        android:layout_marginLeft="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/replyBtn"
        android:layout_toRightOf="@id/favBtn"
        android:layout_marginStart="5dp"
        android:text="TextView" />


</RelativeLayout>